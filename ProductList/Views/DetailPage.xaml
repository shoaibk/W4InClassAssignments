<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProductList.ViewModels"
             x:Class="ProductList.Views.DetailPage">
   <ContentPage.BindingContext>
       <viewmodels:DetailPageViewModel />
   </ContentPage.BindingContext>
    <StackLayout>
        <Image Source="{Binding Image}" HeightRequest="200"/>
        <Label Text="{Binding Title}" FontSize="26" />
        <Label Text="{Binding Description}" FontSize="18"/>
    </StackLayout>
</ContentPage>