<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductList.MainPage"
             xmlns:viewmodels="clr-namespace:ProductList.ViewModels"
             >
    
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel/>
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Products}"
                    SelectionMode="Single"
                    SelectionChanged="OnProductSelected"
                    Margin="16"
    >
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10" BorderColor="LightGray" >
                    <StackLayout Orientation="Horizontal" Spacing="10">
                    
                        <Image Source="{Binding Image}" WidthRequest="50" HeightRequest="50"/>
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" FontSize="12" MaxLines="2" LineBreakMode="TailTruncation"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
                
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
